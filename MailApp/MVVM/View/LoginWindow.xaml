<Window x:Class="MailApp.MVVM.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailApp.MVVM.View"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Đăng nhập" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" />

            <TextBlock Text="Tên tài khoản:" FontSize="14" />
            <TextBox x:Name="UsernameTextBox" Width="250" Margin="0,0,0,10"/>

            <TextBlock Text="Mật khẩu:" FontSize="14" />
            <PasswordBox x:Name="PasswordBox" Width="250" Margin="0,0,0,10"/>

            <Button Content="Đăng nhập" Width="100" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
